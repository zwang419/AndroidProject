<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/activity_main" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">


    -<TableLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tableLayout" android:layout_margin="10dp" android:layout_alignParentTop="true" android:stretchColumns="2">


    -<TableRow android:layout_height="fill_parent" android:layout_width="fill_parent">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="18sp" android:text="Product ID:" android:layout_column="1"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/productID" android:textSize="16sp" android:text="Not Assigned" android:layout_column="2"/>

</TableRow>


    -<TableRow android:layout_height="fill_parent" android:layout_width="fill_parent">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="18sp" android:text="Product Name:" android:layout_column="1"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/productName" android:layout_column="2"/>

</TableRow>


    -<TableRow android:layout_height="fill_parent" android:layout_width="fill_parent">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="18sp" android:text="Stock Keeping Unit:" android:layout_column="1"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/productSku" android:layout_column="2"/>

</TableRow>

</TableLayout>


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerHorizontal="true" android:layout_below="@+id/tableLayout" android:orientation="horizontal">

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/add" android:text="Add" android:onClick="newProduct" android:layout_weight="1"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/find" android:text="Find" android:onClick="lookupProduct" android:layout_weight="1"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/delete" android:text="Delete" android:onClick="removeProduct" android:layout_weight="1"/>

</LinearLayout>

</RelativeLayout>